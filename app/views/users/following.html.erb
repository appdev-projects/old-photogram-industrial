  <div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>
      <%= @user.username %>
    </h1>
    
    <ul class="nav nav-pills nav-justified">
    
      <li class="nav-item">
        <%= link_to 'Posts', user_path(@user.username), class:"nav-link" %>
      </li>
      
      <li class="nav-item">
        <%= link_to 'Liked photos', liked_photos_path(@user.username), class:"nav-link" %>
      </li>
      
      <li class="nav-item">
        <%= link_to 'Feed', feed_photos_path(@user.username), class:"nav-link" %>
      </li>
      
      <li class="nav-item">
        <%= link_to 'Followers', followers_users_path(@user.username), class:"nav-link" %>
      </li>
      
      <li class="nav-item">
        <%= link_to 'Following', following_users_path(@user.username), class:"nav-link active" %>
      </li>
    
    </ul>
    Total users followed: <%= current_user.leaders.count %>
  </div>
</div>
  
  <% current_user.leaders.each do |leader| %>
      <%= render "users/list", the_user: leader %>
  <% end %>